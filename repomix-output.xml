    public static function getDefaultColumns(): array
    {
        return [
            Columns\TypeFor::make(),
            Columns\TypeOf::make(),
            Columns\Key::make(),
            Columns\IsActive::make(),
            Columns\CreatedAt::make(),
            Columns\UpdatedAt::make(),
        ];
